- patharr = @user.path.split(",")
- error = ''

#street_text_fields
	-if patharr[0].nil?
		.error
			We could not find your address
	-else
		-patharr.each do |street|
			.each_street
				<input class='streetfield' type='text' value="#{street}"/>
				%a{:class => "kill_link"} X

#add_street_button
	%a{:id => "new_link", :class => 'button'} Add New Street

=form_for(@user) do |f|
	.step{:id => 'sched-u'}
		.text
			Would you like to schedule morning and evening times for your text alerts?
		.button_div
			%input{:type => "button",:id => 'sched-u-yes', :value => "Yes", :class => "button yes"}
			%input{:type => "button",:id => 'sched-u-no', :value => "No", :class => "button"}
		#sched_chk_dv
			= f.check_box :sched, :id => 'sched_checkbox'
	.step{:id => 'sched_act'}
		.text
			Morning commute:
		.field
			= f.select :sched_mor_start, get_times(), :class => 'drop_down'
			AM
			= f.select :sched_mor_end, get_times()
			AM
		.text
			Evening commute:
		.field
			= f.select :sched_eve_start, get_times()
			PM
			= f.select :sched_eve_end, get_times()
			PM

	.step{:id => 'sens-u'}
		.text
			Would you like to be alerted of Sens home games?
		.button_div
			%input{:type => "button",:id => 'sens-u-yes', :value => "Yes", :class => "button yes"}
			%input{:type => "button",:id => 'sens-u-no', :value => "No", :class => "button"}
		#sens_chk_dv
			= f.check_box :sens, :id => 'sens_checkbox'
	.button_div
		%input{:type => "submit", :value => "Update", :class => "button", :id => "send"}

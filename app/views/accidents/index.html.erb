<h1>Listing accidents</h1>

<table>
  <tr>
    <th>Tid</th>
    <th>Details</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accidents.each do |accident| %>
  <tr>
    <td><%= accident.tid %></td>
    <td><%= accident.details %></td>
    <td><%= accident.time %></td>
    <td><%= link_to 'Show', accident %></td>
    <td><%= link_to 'Edit', edit_accident_path(accident) %></td>
    <td><%= link_to 'Destroy', accident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

